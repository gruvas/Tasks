@model Tasks.Models.Task

<h1 class="text-center">User change</h1>

<div class="text-center">
    <a asp-controller="/TaskList" asp-action="Index">Перейти ко всем задачам</a>
</div>

<form method="post" asp-controller="/TaskList" asp-action="Index">
    <input type="hidden" asp-for="Id" value="@Model.Id" />

    <div class="form-group">
        <label asp-for="Subject">Subject</label>
        <input asp-for="Subject" class="form-control" value="@Model.Subject" required />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea cols="50" rows="5" asp-for="Description" class="form-control" 
        value="@Model.Description" required ></textarea>
    </div>

    <div class="form-group">
        <label asp-for="ContractorId">ContractorId</label>
        <input asp-for="ContractorId" class="form-control" value="@Model.ContractorId" required />
    </div>

    <div class="form-group">
        <label asp-for="InitiatorId">InitiatorId</label>
        <input asp-for="InitiatorId" class="form-control" value="@Model.InitiatorId" required />
    </div>

    <div class="form-group">
        <label asp-for="ExpirationDate">ExpirationDate</label>
        <input asp-for="ExpirationDate" class="form-control datepicker" 
        value="@Model.ExpirationDate.ToString("yyyy-MM-ddTHH:mm")" required />
    </div>

    <div class="text-center">
        <button type="submit" value="Submit" class="btn btn-primary mt-3 text-center">
            Внести изменения
        </button>
    </div>
</form>