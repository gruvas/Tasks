@model Tasks.Domain.Models.Users.User

<h1 class="text-center">User change</h1>

<div class="text-center">
    <a asp-controller="/UserList" asp-action="Index">На главную</a>
</div>

<form method="post" asp-controller="/UserList" asp-action="Change">
    <input type="hidden" asp-for="Id" value="@Model.Id" />

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" value="@Model.LastName" />
    </div>

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" value="@Model.FirstName" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" value="@Model.Email" />
    </div>

    <div class="text-center">
        <button type="submit" value="Submit" class="btn btn-primary mt-3 text-center">Внести изменения</button>
    </div>
</form>