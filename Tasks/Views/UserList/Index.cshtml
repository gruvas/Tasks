@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Mvc.ViewFeatures

@inject IHtmlHelper<UsersModel> Html

@{
    ViewData["Title"] = "Home Page";
    var viewContext = Html.ViewContext;
}
@model UsersModel

@{
    var request = viewContext.HttpContext.Request;

    var pageSize = 10;
    var pageCount = Math.Ceiling((double)Model.Users.Count / pageSize);
    var pageCurrent = request.Query.ContainsKey("page") ? int.Parse(request.Query["page"]) : 1;
    var startIndex = (pageCurrent - 1) * pageSize;
    var displayedUsers = Model.Users.Skip(startIndex).Take(pageSize).ToList();
}


<div class="text-center">
    <header class="header">
        <a asp-controller="UserList" asp-action="Create">
            Добавить нового пользователя
        </a>

        <div>
            Страница  # @pageCurrent из @pageCount
        </div>
    </header>

    <table class="table">
        <thead>
            <tr>
                <th>Идентификатор</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @if (displayedUsers.Any())
            {
                @foreach (var user in displayedUsers)
                {
                    <tr>
                        <td>
                            <a href="/UserList/Change/@user.Id">@user.Id</a>
                        </td>
                        <td>@user.LastName</td>
                        <td>@user.FirstName</td>
                        <td>@user.Email</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <footer class="home-footer">
        <a asp-action="Index" asp-route-page="@(pageCurrent - 1 < 1 ? 1 : pageCurrent - 1)">Назад</a>
        <a asp-action="Index" asp-route-page="@(pageCurrent + 1 > pageCount ? pageCount : pageCurrent + 1)">Вперед</a>
    </footer>
</div>