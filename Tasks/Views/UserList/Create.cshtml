@model Tasks.Domain.Models.Users.User

<h1 class="text-center">Create user</h1>

<div class="text-center">
    <a asp-controller="/UserList" asp-action="Index">На главную</a>
</div>

<form method="post" asp-controller="/UserList" asp-action="Create">
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="text-center">
        <button type="submit" value="Submit" class="btn btn-primary mt-3">Создать пользователя</button>
    </div>
</form>